<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#5c6bc0" />
            <stroke
                android:width="1dp"
                android:color="#5c6bc0" />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <solid
                android:color="#3f51b5" />
            <stroke
                android:width="1dp"
                android:color="#3f51b5" />
        </shape>
    </item>
</selector>