<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="#fff"
    android:paddingLeft="40dp"
    android:paddingTop="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Chat"
        android:id="@+id/textView54"
        android:textSize="18dp" android:textColor="#ff565555"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView54"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegChat"
            android:textColor="#3c4248"
            android:background="@mipmap/chat_button_regular"
            android:src="@mipmap/chat_button_regular"
            android:layout_below="@+id/textView54"
            android:layout_toLeftOf="@+id/btnGroupChat"
            android:layout_toStartOf="@+id/btnGroupChat"
            android:layout_marginRight="15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGroupChat"
            android:src="@mipmap/chat_button_group"
            android:background="@mipmap/chat_button_group"
            android:layout_below="@+id/textView54"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSecChat"
            android:background="@mipmap/chat_button_secret"
            android:src="@mipmap/chat_button_secret"
            android:layout_below="@+id/textView54"
            android:layout_toRightOf="@+id/btnGroupChat"
            android:layout_toEndOf="@+id/btnGroupChat"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@mipmap/cross"
        android:src="@mipmap/cross" />
</RelativeLayout>