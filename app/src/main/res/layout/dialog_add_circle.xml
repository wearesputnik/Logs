<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Circle"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtCircleName"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAddCircle"
        android:layout_below="@+id/edtCircleName"
        android:layout_alignRight="@+id/edtCircleName"
        android:layout_alignEnd="@+id/edtCircleName"
        android:layout_alignLeft="@+id/edtCircleName"
        android:layout_alignStart="@+id/edtCircleName"
        android:layout_marginTop="10dp"
        android:textAppearance="@android:style/TextAppearance"
        android:background="@drawable/bg_send_chat_item" />
</RelativeLayout>